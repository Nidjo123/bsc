#include <iostream>
#include <cstring>
#include <png++/png.hpp>
#include <SSD.hpp>

int main(int argc, char *argv[]) {
  if (argc == 5) {
    png::image<png::rgb_pixel> left(argv[1]);
    png::image<png::rgb_pixel> right(argv[2]);
    const int window_size = atoi(argv[3]);
    const int max_disparity = atoi(argv[4];

    SSD ssd(left, right, max_disparity);

    ssd.calculate();
  }
  
  return 0;
}
